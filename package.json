{
  "name": "ecommerce-full-stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:KabirMaan/rdr-clothing.git",
  "author": "Kabir Maan <kabirmaan9@gmail.com>",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server && yarn start",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && tsc -p .",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node dist/server.js",
    "client-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "server-postbuild": "cd server && npm install && npm run build:server",
    "heroku-postbuild": "npm client-postbuild && npm server-postbuild"
  },
  "devDependencies": {
    "concurrently": "^5.0.0"
  }
}
