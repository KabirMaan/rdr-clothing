{
  "name": "ecommerce-full-stack",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": "12.7.0",
    "npm": "6.11.3"
  },
  "repository": "git@github.com:KabirMaan/rdr-clothing.git",
  "author": "Kabir Maan <kabirmaan9@gmail.com>",
  "license": "MIT",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "cd server ts-node server.ts",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node dist/server.js",
    "build:client": "cd client && npm run build",
    "build:server": "tsc -p ./server",
    "heroku-postbuild": "npm run build:server && cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-sslify": "^1.2.0",
    "stripe": "^7.13.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/express-sslify": "^1.2.1",
    "@types/node": "^12.12.8",
    "@types/stripe": "^7.13.4",
    "concurrently": "^5.0.0",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  }
}
